# Database Configuration
POSTGRES_USER=l1xi_user
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=l1xi_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long

# API URLs
FRONTEND_URL=http://localhost:3000
DESKTOP_URL=http://localhost:3001
API_URL=http://localhost:5000/api

# Server Configuration
NODE_ENV=development
PORT=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# TTS Configuration (0 for dev, 1 for production)
NODE_TLS_REJECT_UNAUTHORIZED=0

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@l1xi.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password_here

# Production URLs (uncomment and update for production deployment)
# FRONTEND_URL=https://yourdomain.com
# DESKTOP_URL=https://yourdomain.com
# API_URL=https://yourdomain.com/api
# NODE_ENV=production
# NODE_TLS_REJECT_UNAUTHORIZED=1